<%= form_for(@user) do |f| %>
  <p id="notice"><%= notice %></p>

  <div class="field">
    <%= f.label :mail_address %><br />
    <%= f.text_field :mail_address %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>