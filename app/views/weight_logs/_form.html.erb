<%= form_for @weight_log, :html => {:class => "form-horizontal"} do |f| %>
  <% if @weight_log.errors.any? %>
    <div class="alert alert-error">
      <h4><%= pluralize(@weight_log.errors.count, "") %> 個のエラーが発生しました。:</h4>

      <ul>
      <% @weight_log.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="control-group">
  	<label class="control-label">計測日</label>
  	<div class="controls">
  	  <%= f.date_select :measured_date %>
  	</div>
  </div>
  <div class="control-group">
  	<label class="control-label">体重</label>
    <div class="controls">
      <%= f.number_field :weight , :step => 0.1, :class => "span1" %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => "btn btn-primary" %>
  </div>
<% end %>