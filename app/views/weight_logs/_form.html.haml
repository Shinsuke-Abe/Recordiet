= form_for @weight_log, :html => {:class => "form-horizontal"} do |f|
  - if @weight_log.errors.any?
    = render :partial => "formerror", :locals => {:form_errors => @weight_log.errors}
  
  .control-group
    .control-label= f.label :measured_date
    .controls= f.date_select :measured_date
  .control-group
    .control-label= f.label :weight
    .controls= f.number_field :weight , :step => 0.1, :class => "span1"
  .form-actions= f.submit nil, :class => "btn btn-primary"