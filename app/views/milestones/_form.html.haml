= form_for @milestone, :url => milestone_path, :html => {:class => "form-horizontal"} do |f|
  - if @milestone.errors.any?
    = render :partial => "formerror", :locals => {:form_errors => @milestone.errors}
  
  .control-group
    .control-label 体重
    .controls= f.number_field :weight , :step => 0.1, :class => "span1"
  .control-group
    .control-label 期限
    .controls= f.date_select :date
  .control-group
    .control-label ご褒美
    .controls= f.text_area :reward
  .form-actions= f.submit nil, :class => "btn btn-primary"
