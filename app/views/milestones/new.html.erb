<h1>目標設定</h1>

<%= form_for [@user, @milestone] do |f| %>
  <% if @milestone.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@milestone.errors.count, "error") %> prohibited this weight log from being saved:</h2>

      <ul>
      <% @milestone.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    体重：<%= f.number_field :weight , :step => 0.1 %>
  </div>
  <div class="field">
    期限：<%= f.date_select :date %>
  </div>
  <div class="field">
    ご褒美：<%= f.text_field :reward %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>