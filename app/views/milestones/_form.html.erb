<%= form_for @milestone, :url => milestone_path do |f| %>
  <% if @milestone.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@milestone.errors.count, "") %> 個のエラーが発生しました。:</h2>

      <ul>
      <% @milestone.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    体重：<%= f.number_field :weight , :step => 0.1 %>
  </div>
  <div class="field">
    期限：<%= f.date_select :date %>
  </div>
  <div class="field">
    ご褒美：<%= f.text_field :reward %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>