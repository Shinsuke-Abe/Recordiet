<p id="notice"><%= notice %></p>

<p>
  <b>Mail address:</b>
  <%= @user.mail_address %>
</p>

<p>
  <b>Display name:</b>
  <%= @user.display_name %>
</p>

<h2>体重履歴を追加</h2>
<%= form_for([@user, @user.weight_logs.build]) do |f| %>
  <div class="field">
  	計測日：<%= f.date_select :measured_date %>
  </div>
  <div class="field">
  	体重：<%= f.number_field :weight , :step => 0.1 %>
  </div>
  <div class="actions">
    <%= f.submit "記録" %>
  </div>
<% end %>

<h2>体重履歴</h2>
<% @user.weight_logs.each do |weight_log| %>
  <p>
  	<p>計測日：</p>
  	<%= weight_log.measured_date %>
  </p>
  <p>
  	<p>体重：</p>
  	<%= weight_log.weight %>
  </p>
<% end %>

