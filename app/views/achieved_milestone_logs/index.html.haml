<h2>目標達成履歴</h2>
<% if notice %>
  <%= render :partial => "notice", :object => flash[:notice] %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>達成日</th><th>達成目標</th>
    </tr>
  </thead>
  <tbody>
  <% @achieved_milestone_logs.each do |achieved_milestone_log| %>
  	<tr>
  	  <td><%= achieved_milestone_log.achieved_date %></td>
  	  <td><%= achieved_milestone_log.milestone_weight %> kg</td>
  	</tr>
  <% end %>
  </tbody>
</table>
