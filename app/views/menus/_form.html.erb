<%= form_for [@weight_log, @menu] do |f| %>
  <% if @menu.errors.any? %>
    <%= render :partial => "formerror", :locals => {:form_errors => @menu.errors} %>
  <% end %>
  
  <div class="control-group">
    <div class="control-label">種類</div>
    <div class="controls"><%= f.select :menu_type, select_menu_array %></div>
  </div>
  <div class="control-group">
    <div class="control-label">食事内容</div>
    <div class="controls"><%= f.text_area :detail %></div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => "btn btn-success btn-large" %>
  </div>
<% end %>